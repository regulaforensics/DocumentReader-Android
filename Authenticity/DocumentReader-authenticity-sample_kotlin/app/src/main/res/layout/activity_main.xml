                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="IR Visibility"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivIRVisibilityInfo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvIRVisibilityValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="default"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_authenticity_check"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ivIPIInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/baseline_info_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/additionalItems" />

                <TextView
                    android:id="@+id/tvIPIName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="IPI"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivIPIInfo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvIPIValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="default"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_authenticity_check"
                android:padding="12dp"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:id="@+id/ivSecurityTextInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY="1.2"
                    android:scaleX="1.2"
                    android:src="@drawable/baseline_info_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/additionalItems"  />

                <TextView
                    android:id="@+id/tvSecurityTextName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Security text"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivSecurityTextInfo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSecurityTextValue"
                    android:textAlignment="textEnd"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="default"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnResetAll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/btnReset"
        android:shadowRadius="5"
        android:text="reset all auth params"
        android:background="@drawable/button_shape"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStartDocProcessing">

            <RadioButton
                android:id="@+id/rBtnShowScanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Default (Show scanner)"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:checked="true"
                app:layout_constraintBottom_toTopOf="@+id/rBtnRecognizeImage"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioButton
                android:id="@+id/rBtnRecognizeImageWithLightType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recognize images with light type"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/rBtnRecognizeImage"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioButton
                android:id="@+id/rBtnRecognizeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Gallery (Recognize image)"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btnStartDocProcessing"
                app:layout_constraintStart_toStartOf="parent" />
        </RadioGroup>

        <Button
            android:id="@+id/btnStartDocProcessing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/button_shape"
            android:text="PROCESS DOCUMENT"
            android:textColor="@color/textColorAction"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>